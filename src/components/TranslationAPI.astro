---
interface Props {
	word: string;
}

const { word } = Astro.props;

// Simulamos una llamada a una API de traducción
const getTranslation = (word: string) => {
	const translations = {
		'Che': 'Hey',
		'Boludo': 'Fool',
		'Mina': 'Girl',
		'Pibe': 'Kid',
		'Quilombo': 'Mess',
	};
	return translations[word] || 'Translation not available';
};

const translation = getTranslation(word);
---

<div class="translation">
	<h3>Traducción al inglés:</h3>
	<p>{translation}</p>
</div>

<style>
	.translation {
		margin-top: 1rem;
		padding: 0.5rem;
		background-color: #f0f0f0;
		border-radius: 0.3rem;
	}
	h3 {
		margin: 0;
		font-size: 1rem;
		color: #333;
	}
	p {
		margin: 0.5rem 0 0;
		font-weight: bold;
		color: #0066cc;
	}
</style>