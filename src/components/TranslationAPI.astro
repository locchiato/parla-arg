---
interface Props {
	word: string;
}

const { word } = Astro.props;

// Simulamos una llamada a una API de traducción más completa
const getTranslation = async (word: string) => {
	// En una implementación real, aquí se haría una llamada a una API externa
	const translations = {
		'Che': { en: 'Hey', es: 'Oye', pt: 'Ei', fr: 'Hé' },
		'Boludo': { en: 'Fool', es: 'Tonto', pt: 'Bobo', fr: 'Idiot' },
		'Mina': { en: 'Girl', es: 'Chica', pt: 'Garota', fr: 'Fille' },
		'Pibe': { en: 'Kid', es: 'Chico', pt: 'Garoto', fr: 'Gamin' },
		'Quilombo': { en: 'Mess', es: 'Lío', pt: 'Bagunça', fr: 'Bordel' },
	};
	return translations[word] || { en: 'Translation not available', es: 'Traducción no disponible', pt: 'Tradução não disponível', fr: 'Traduction non disponible' };
};

const translations = await getTranslation(word);
---

<div class="translation">
	<h3>Traducciones:</h3>
	<ul>
		<li><strong>Inglés:</strong> {translations.en}</li>
		<li><strong>Español (España):</strong> {translations.es}</li>
		<li><strong>Portugués:</strong> {translations.pt}</li>
		<li><strong>Francés:</strong> {translations.fr}</li>
	</ul>
</div>

<style>
	.translation {
		margin-top: 1rem;
		padding: 1rem;
		background-color: #f0f0f0;
		border-radius: 0.5rem;
	}
	h3 {
		margin: 0 0 0.5rem 0;
		font-size: 1.1rem;
		color: #333;
	}
	ul {
		margin: 0;
		padding-left: 1.2rem;
	}
	li {
		margin-bottom: 0.3rem;
	}
</style>